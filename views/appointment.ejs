<body id="body">

    <!------ POP UP MESSAGE ------>

        <% if(show) { %>
          <div class="body-layer show-body-layer z-50 opacity-75 fixed bg-gray-800">
          </div>
          <div class="pop-up show-pop-up fixed z-50 flex flex-col">
            <div class="modal p-6 rounded-xl opacity-100 bg-white">
              <h1 id="modal-title" class="text-xl z-50 my-2 font-semibold text-black">
                <%= title %>
              </h1>
              <p id="modal-text" class="leading my-2">
                <%= text %>
              </p>
              <button id="modal-btn" type="button" class="bg-indigo-600 text-white py-2 px-6 font-semibold mt-2 rounded-md hover:bg-indigo-500 focus:shadow-outline focus:outline-none cursor-pointer ease-in-out duration-300">Okay</button>
            </div>
          </div>
        <% } else { %>
          <div class="body-layer z-50 opacity-75 fixed bg-gray-800">
          </div>
          <div class="pop-up fixed z-50 flex flex-col">
            <div class="modal p-6 rounded-xl opacity-100 bg-white">
              <h1 id="modal-title" class="text-xl z-50 my-2 font-semibold text-black">
                
              </h1>
              <p id="modal-text" class="leading my-2">
                
              </p>
              <button id="modal-btn" type="button" class="bg-indigo-600 text-white py-2 px-6 font-semibold mt-2 rounded-md hover:bg-indigo-500 focus:shadow-outline focus:outline-none cursor-pointer ease-in-out duration-300">Okay</button>
            </div>
          </div>
        <% } %>

    <!---------- NAVBAR ---------->
    <div class="respo-nav respo-navbar fixed md:hidden w-full bg-gray-800 transition-all duration-500 ease-in-out border-b-8 border-indigo-500">
        <div class="px-2 pt-2 pb-3 w-full">
            <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-white hover:bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Home</a>
            <a href="/appointment" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Appointment</a>
